#!/bin/bash

_other_installs () {
   if [[ $OTHER_INSTALLS != "None" ]]
   then
    apt install $OTHER_INSTALLS -y
   fi
   }
_externals () {
   if [[ $OTHER_CMD != "None" ]]
   then
      $OTHER_CMD
   fi
   }
    
apt update && apt upgrade -y
apt install git -y
_other_installs
pip3 install -U pip
git clone $REPO_URL Github_Repo
cd Github_Repo
# Install Docker
apt-get update
apt-get install docker.io -y

# Build the Docker image
docker build -t sleepy-woodland-48068 .

# Run the Docker container
docker run -it --rm sleepy-woodland-48068

pip3 install -U -r requirements.txt
_externals
